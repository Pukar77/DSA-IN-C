#include<string.h>

struct node {
  char name[20];
  int data;
    struct node *next;
};

typedef struct node node;

node *head = NULL;

void add() {
   char n[20];
    node *newnode = (node*)malloc(sizeof(node));
printf("Enter the name\n");
scanf("%s",n);
strcpy(newnode->name,n);

    if (head == NULL) {
        newnode->next = NULL;
        head = newnode;
    } else {
        node *ptr = head;
        while (ptr->next != NULL) {
            ptr = ptr->next;
        }
        ptr->next = newnode;
        newnode->next = NULL;
    }
}

