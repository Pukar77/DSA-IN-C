#include<stdio.h>
int fact(int num){
    if(num==1){
        return 1;
    }else{
        return num*fact(num-1);
    }
}

int main(){
    int num;
    
    printf("Enter the number of which you want factorial\n");
    scanf("%d", &num);
    
    if(num<0){
        printf("The factorial of value less then 0 is undefined\n");
    }
    else{
        int result = fact(num);
        printf("The factorial of %d is %d", num, result);
        
    }
}
